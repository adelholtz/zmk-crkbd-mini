#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <locale/keys_de.h>

#define DEF 0
#define NAV 1
#define SYM 2
#define ADJ 3
#define EXTRA 4
#define MEDIA 5

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;

            quick-tap-ms = <180>;
            require-prior-idle-ms = <120>; /* tune to taste */
        };

        para: para {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            bindings = <&kp LEFT_PARENTHESIS>, <&kp RIGHT_PARENTHESIS>;
        };

        caps: caps {
            compatible = "zmk,behavior-caps-word";
            #binding-cells = <0>;
            continue-list = <MINUS BACKSPACE>;
        };

        paraless: paraless {
            compatible = "zmk,behavior-mod-morph";
            bindings = <&kp LEFT_PARENTHESIS>, <&kp LESS_THAN>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        paragreat: paragreat {
            compatible = "zmk,behavior-mod-morph";
            bindings = <&kp RIGHT_PARENTHESIS>, <&kp GREATER_THAN>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        esc_q: esc_q {
            compatible = "zmk,behavior-tap-dance";
            label = "ESC_Q";
            #binding-cells = <0>;
            bindings = <&kp Q>, <&kp ESCAPE>;
        };

        space_tab: space_tab {
            compatible = "zmk,behavior-tap-dance";
            label = "SPACE_TAB";
            #binding-cells = <0>;
            bindings = <&kp SPACE>, <&kp TAB>;

            tapping-term-ms = <175>;
        };
    };

    macros {
        browsertab: browsertab {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LCTRL>,
                <&macro_tap>,
                <&kp TAB>,
                <&macro_release>,
                <&kp LCTRL>;
        };

        // macOS browser reload (CMD+R)
        reload: reload {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp LGUI>
                     , <&macro_tap &kp R>
                     , <&macro_release &kp LGUI>;
        };

        // macOS left curly brace (AltGr+8)
        lcurly: lcurly {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT>
                     , <&macro_tap &kp N8>
                     , <&macro_release &kp RALT>;
        };

        // macOS right curly brace (AltGr+9)
        rcurly: rcurly {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT>
                     , <&macro_tap &kp N9>
                     , <&macro_release &kp RALT>;
        };

        // macOS pipe (AltGr+7)
        pipe: pipe {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT>
                     , <&macro_tap &kp N7>
                     , <&macro_release &kp RALT>;
        };

        // macOS backslash (AltGr+Shift+7)
        backslash: backslash {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT &kp LSHFT>
                     , <&macro_tap &kp N7>
                     , <&macro_release &kp LSHFT &kp RALT>;
        };

        // macOS less than (<) - German keyboard (NUBS key)
        lesskey: lesskey {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_tap &kp NUBS>;
        };

        // macOS greater than (>) - German keyboard (Shift + NUBS)
        greaterkey: greaterkey {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp LSHFT>
                     , <&macro_tap &kp NUBS>
                     , <&macro_release &kp LSHFT>;
        };

        // macOS left bracket (AltGr+5)
        lbracket: lbracket {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT>
                     , <&macro_tap &kp N5>
                     , <&macro_release &kp RALT>;
        };

        // macOS right bracket (AltGr+6)
        rbracket: rbracket {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp RALT>
                     , <&macro_tap &kp N6>
                     , <&macro_release &kp RALT>;
        };

        // Shift + Enter
        shift_enter: shift_enter {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &kp LSHFT>
                     , <&macro_tap &kp ENTER>
                     , <&macro_release &kp LSHFT>;
        };
    };

    combos {
        compatible = "zmk,combos";

        // escape {
        //     bindings = <&kp ESCAPE>;
        //     key-positions = <13 29>;
        // };

        // delete {
        //     bindings = <&kp DELETE>;
        //     key-positions = <15 21>;
        // };

        // backslash {
        //     bindings = <&kp BACKSLASH>;
        //     key-positions = <26 14>;
        //     layers = <0>;
        // };

        // slash {
        //     bindings = <&kp SLASH>;
        //     key-positions = <32 20>;
        //     layers = <0>;
        // };
    };

    //

    keymap {
        compatible = "zmk,keymap";

        DEF {
            display-name = "Base";

            // -----------------------------------------------------------------------------------------
            // |  Q  |  W  |  F  |  P  |  G  |   |  J  |  L   |  L  |  U  |  Y  |
            // |  A  |  R  |  S  |  T  |  D  |   |  H  |  N   |  E  |  I  |  O  |
            // |  Z  |  X  |  C  |  V  |  B  |   |  K  |  M   |  ,  |  .  |  /  |
            // | GUI | CTRL | SHFT | LWR | SPC |   | ENT | RSE  | BKSP | ALT | ESC |

            bindings = <
&trans  &esc_q  &kp W  &kp F       &kp P    &kp G             &kp J            &lt 5 L    &kp U          &kp DE_Y          &mo 3         &trans
&trans  &kp A   &kp R  &hm LALT S  &lt 4 T  &hm LEFT_WIN D    &hm RIGHT_WIN H  &lt 4 N  &hm RCTRL E    &kp I          &kp O         &trans
&trans  &kp DE_Z   &kp X  &kp C       &kp V    &kp B             &kp K            &kp M    &kp DE_COMMA   &kp DE_PERIOD  &kp DE_MINUS  &trans
                       &kp BACKSPACE    &mo 1    &space_tab        &sk RIGHT_SHIFT  &mo 2    &kp ENTER
            >;
        };

        NAV {
            display-name = "NavNum";

            // -----------------------------------------------------------------------------------------
            // | | ESC  | P_DOWN |  UP  |  P_UP |     |   |   |  7  |  8  |  9  |    |  |
            // | | HOME | LEFT   | DOWN | RIGHT | END |   | * |  4  |  5  |  6  |    |  |
            // | |      |        |      |       |     |   | + |  1  |  2  |  3  |    |  |
            //                             |  |  | DEL  | SHIFT | Layer3 (ADJ) | 0 |

            bindings = <
&trans  &kp ESCAPE  &kp PAGE_UP  &kp UP_ARROW  &kp PAGE_DOWN  &none         &none             &kp N7  &kp N8   &kp N9  &none  &trans
&trans  &kp HOME    &kp LEFT     &kp DOWN      &kp RIGHT      &kp END       &kp DE_ASTERISK   &kp N4  &kp N5   &kp N6  &none  &trans
&trans  &none       &none        &none         &none          &none         &kp DE_PLUS       &kp N1  &kp N2   &kp N3  &kp DE_SZ  &trans
                                 &none      &trans         &kp DELETE    &sk RIGHT_SHIFT     &mo 3   &kp NUMBER_0
            >;
        };

        SYM {
            display-name = "Symbols";

            // -----------------------------------------------------------------------------------------
            // |  |   |  ^  |  °  |  `  | § |   |     |  \  |  *  |     |     |  |
            // |  | = |  %  |  !  |  "  | $ |   |  &  |  /  |  ?  |  #  | "|" |  |
            // |  |   |     |     |  '  | € |   |     |     |     |     |     |  |
            //            |     |     | DEL |   | BSPC |     |    |

            bindings = <
  &trans  &trans           &kp DE_CARET       &kp DE_DEGREE       &kp DE_GRAVE          &kp DE_PRCNT  &none             &backslash        &kp DE_ASTERISK  &none        &none   &trans
  &trans  &kp DE_EQUAL     &kp DE_PERCENT     &kp DE_EXCLAMATION  &kp DE_DOUBLE_QUOTES  &kp DOLLAR    &kp DE_AMPERSAND  &kp DE_SLASH      &kp DE_QUESTION  &kp DE_HASH  &pipe   &trans
  &trans  &kp DE_A_UMLAUT  &kp DE_O_UMLAUT    &kp DE_U_UMLAUT     &kp DE_SQT            &kp DE_EURO   &none             &none             &none            &none        &none   &trans
                                &none            &none              &kp DELETE    &kp BACKSPACE  &none                &none
            >;
        };

        ADJ {
            display-name = "System";
            bindings = <
&trans  &kp F1        &kp F2         &kp F3        &kp F4      &kp F5            &kp F6  &kp F7  &kp F8  &kp F9  &kp F10      &trans
&trans  &hm LGUI F11  &hm LSHFT F12  &trans        &trans      &studio_unlock    &trans  &trans  &trans  &trans  &trans       &trans
&trans  &bt BT_SEL 0  &bt BT_SEL 1   &bt BT_SEL 2  &bt BT_CLR  &bt BT_CLR_ALL    &trans  &trans  &trans  &trans  &bootloader  &trans
                                     &trans        &trans      &trans            &trans  &trans  &trans
            >;
        };

        EXTRA {
            display-name = "Brackets";

            // -----------------------------------------------------------------------------------------
            // |  |   |     |  <  |    |  |   |   |  >  |     |     |   |  |
            // |  | { |  [  |  (  |    |  |   |   |  )  |  ]  |  }  |   |  |
            // |  |   |     |     |    |  |   |   |     |     |     |   |  |
            //            |     |     | TAB |   | Shift+Enter |     |    |

            bindings = <
  &trans  &none  &none      &none        &lesskey                 &none        &none      &greaterkey              &none         &none       &none  &trans
  &trans  &none  &lcurly    &lbracket    &kp DE_LEFT_PARENTHESIS  &none        &none      &kp DE_RIGHT_PARENTHESIS &rbracket     &rcurly     &none  &trans
  &trans  &none  &none      &none        &none                    &none        &none      &none                    &none         &none       &none  &trans
                           &trans       &trans                   &kp TAB    &shift_enter  &trans                   &trans
            >;
        };

        MEDIA {
            display-name = "Media";

            // -----------------------------------------------------------------------------------------
            // |  |     | MUTE | STOP | VOL+ |     |   |     |     |     |     |     |  |
            // |  |     | PREV | PLAY | NEXT |     |   |     |     |     |     |     |  |
            // |  |     |      |      | VOL- |     |   |     |     |     |     |     |  |
            //            |     |     |      |   |      |     |    |

            bindings = <
  &trans  &none  &kp C_MUTE        &kp C_STOP         &kp C_VOL_UP    &none    &none  &none  &none  &none  &none  &trans
  &trans  &none  &kp C_PREV        &kp C_PLAY_PAUSE   &kp C_NEXT      &none    &none  &none  &none  &none  &none  &trans
  &trans  &none  &none             &none              &kp C_VOL_DN    &none    &none  &none  &none  &none  &none  &trans
                                   &trans             &trans          &trans   &trans &trans &trans
            >;
        };
    };
};
